{
  "name": "bedrock-visual-dialogue-editor",
  "version": "0.0.1",
  "private": true,
  "author": "Aevarkan",
  "license": "GPL-3.0-only",
  "displayName": "%bedrockDialogueEditor.displayName%",
  "type": "commonjs",
  "scripts": {
    "copy-media": "node scripts/copy-app-media-files.cjs",
    "compile": "tsdown",
    "build": "pnpm run copy-media && pnpm run compile",
    "package": "vsce package -o bedrock-visual-dialogue-editor.vsix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Aevarkan/dialogue-graph"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "bedrockDialogueEditor.openGraphEditor",
        "title": "%bedrockDialogueEditor.openGraphEditor%",
        "category": "%bedrockDialogueEditor.category%"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "bedrockDialogueEditor.openGraphEditor",
          "when": "editorLangId == json"
        }
      ]
    },
    "configuration": {
      "title": "%bedrockDialogueEditor.name%",
      "properties": {
        "bedrockDialogueEditor.autoOpen": {
          "title": "%bedrockDialogueEditor.autoOpen.title%",
          "description": "%bedrockDialogueEditor.autoOpen.desc%",
          "type": "boolean",
          "default": false
        },
        "bedrockDialogueEditor.switchFocusOnOpen": {
          "title": "%bedrockDialogueEditor.switchFocusOnOpen.title%",
          "markdownDescription": "%bedrockDialogueEditor.switchFocusOnOpen.desc%",
          "type": "boolean",
          "default": true
        },
        "bedrockDialogueEditor.editorOpenLocation": {
          "title": "%bedrockDialogueEditor.editorOpenLocation.title%",
          "markdownDescription": "%bedrockDialogueEditor.editorOpenLocation.desc%",
          "type": "string",
          "enum": ["active", "beside"],
          "markdownEnumDescriptions": [
            "%bedrockDialogueEditor.editorOpenLocation.active.desc%",
            "%bedrockDialogueEditor.editorOpenLocation.beside.desc%"
          ],
          "default": "beside"
        }
      }
    },
    "customEditors": [
      {
        "viewType": "bedrockDialogueEditor.graphEditor",
        "displayName": "%bedrockDialogueEditor.graphEditor.displayName%",
        "selector": [
          {
            "filenamePattern": "*.json",
            "language": "json"
          }
        ]
      }
    ]
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "devDependencies": {
    "@vscode/vsce": "^3.7.0",
    "@workspace/common": "workspace:*",
    "tsdown": "^0.16.1"
  }
}